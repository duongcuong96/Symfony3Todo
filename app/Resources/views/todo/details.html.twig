
{%extends "base.html.twig" %}
{%block title %}
    Sửa : {{ todo.name }}
{%endblock%}

{%block body %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên việc</th>
                <th scope="col">Thời gian</th>
                <th scope="col">Chi tiết</th>
                <th scope="col">Hành động</th>
                
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">{{todo.id}}</th>
                <td>{{todo.name}}</td>
                <td>{{todo.dueDate | date("d/m/Y g:i a")}}</td>
                <td>{{ todo.description }}</td>
                <td>
                    <a href="/todo/delete/{{todo.id}}"><button type="button" class="btn btn-danger">Xoá</button></a>
                    <a href="/todo/edit/{{todo.id}}"><button type="button" class="btn btn-warning">Sửa</button></a>
                </td>
            </tr>
            
            
            
        </tbody>
    </table>
{%endblock%}